<UserControl x:Class="PointOfSale.CustomizeChiliCheeseFries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350" DataContextChanged="OnSizeChanged">
    <StackPanel Background="White" Opacity=".8">
        <TextBlock Width ="700" FontWeight ="Bold" HorizontalAlignment="Left" FontSize="20" Text="Customize Cowpoke Chili" />
        <StackPanel Orientation="Vertical">
            <RadioButton Name="SizeSmall" Margin ="10" VerticalAlignment="Center" FontSize="18">Small</RadioButton>
            <RadioButton Name="SizeMedium" Margin ="10" VerticalAlignment="Center" FontSize="18">Medium</RadioButton>
            <RadioButton Name="SizeLarge" Margin ="10" VerticalAlignment="Center" FontSize="18">Large</RadioButton>
        </StackPanel>
    </StackPanel>
</UserControl>
