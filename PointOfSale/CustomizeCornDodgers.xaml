<UserControl x:Class="PointOfSale.CustomizeCornDodgers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <StackPanel Background="White" Opacity=".8">
        <TextBlock Width ="700" FontWeight ="Bold" HorizontalAlignment="Left" FontSize="20" Text="Customize Corn Dodgers" />
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Size}" Margin="10" FontSize="18" VerticalAlignment="Center">Small</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path= Size}" Margin ="10" VerticalAlignment="Center" FontSize="18">Medium</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Size}" Margin ="10" VerticalAlignment="Center" FontSize="18">Large</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
