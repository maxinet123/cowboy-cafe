<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <StackPanel Background="White" Opacity=".8">
        <TextBlock Width ="700" HorizontalAlignment="Left" FontSize="24" Text="Customize Angry Chicken" />
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path= Bread}" Margin="10" FontSize ="18" VerticalAlignment="Center">Bread</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path= Pickle}" Margin="10" VerticalAlignment="Center" FontSize="18">Pickle</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
