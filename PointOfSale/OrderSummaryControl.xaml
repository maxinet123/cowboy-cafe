<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="185">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="350" />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock>Order</TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBox Text="{Binding Path=Subtotal, StringFormat=c}" Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row ="1" Grid.Column="0">
            <ListView Name ="OrderListView" ItemsSource="{Binding Path=Items}"/>
        </StackPanel>
        <StackPanel Grid.Row ="1" Grid.Column="1"/>

        <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock>Subtotal</TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>



    </Grid>
</UserControl>
