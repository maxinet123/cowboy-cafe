<UserControl x:Class="PointOfSale.CustomizeTrailBurger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <StackPanel Background="White" Opacity=".8">
        <TextBlock Width ="700" FontWeight="Bold" HorizontalAlignment="Left" FontSize="20" Text="Customize Trail Burger" />
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Bun}" Margin="10" VerticalAlignment="Center" FontSize="18">Bun</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Cheese}" Margin="10" VerticalAlignment="Center" FontSize="18">Cheese</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path= Ketchup}" Margin ="10" VerticalAlignment="Center" FontSize="18">Ketchup</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Mustard}" Margin ="10" VerticalAlignment="Center" FontSize="18">Mustard</CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <CheckBox IsChecked="{Binding Path= Pickle}" Margin ="10" VerticalAlignment="Center" FontSize="18">Pickle</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
